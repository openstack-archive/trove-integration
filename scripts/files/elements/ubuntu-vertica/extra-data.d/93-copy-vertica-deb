#!/bin/bash

# CONTEXT: HOST prior to IMAGE BUILD as SCRIPT USER
# PURPOSE: Stages the DATASTORE_PKG_FILE file,
# so that guest image has the package file.

set -e
set -o xtrace

source $_LIB/die

[ -n "$TMP_HOOKS_PATH." ] || die "Temp hook path not set"
[ -n "$DATASTORE_PKG_LOCATION." ] || die "Datastore package location not set"
[ -n "$DATASTORE_PKG_FILE." ] || die "Datastore package file-name not set"
dd if=${DATASTORE_PKG_LOCATION}/${DATASTORE_PKG_FILE} of=${TMP_HOOKS_PATH}/${DATASTORE_PKG_FILE}
