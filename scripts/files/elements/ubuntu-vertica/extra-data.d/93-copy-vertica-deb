#!/bin/bash

# CONTEXT: HOST prior to IMAGE BUILD as SCRIPT USER
# PURPOSE: Stages the VERTICA_PACKAGE_FILE file,
# so that guest image has the package file.

set -e
set -o xtrace

source $_LIB/die

[ -n "$TMP_HOOKS_PATH." ] || die "Temp hook path not set"
[ -n "$DATASTORE_PACKAGE_LOCATION." ] || die "Vertica package location not set"
[ -n "$DATASTORE_PACKAGE_FILE." ] || die "Vertica package file-name not set"
dd if=${DATASTORE_PACKAGE_LOCATION}/${DATASTORE_PACKAGE_FILE} of=${TMP_HOOKS_PATH}/${DATASTORE_PACKAGE_FILE}
